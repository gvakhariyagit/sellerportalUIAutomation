<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="BDD Test Suite" verbose="1" parallel="tests" thread-count="4">

    <test name="Test runner in chrome" >
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="com.example.selenium_cucmber.TestRunner" />
        </classes>
    </test>

    <test name="Test runner in firefox" >
        <parameter name="browser" value="firefox" />
        <classes>
            <class name="com.example.selenium_cucmber.TestRunner" />
        </classes>
    </test>
</suite>